generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum ImportanceLevel {
  One
  Two
  Three
  Four
  Five
}

model Record {
  id               String           @id @default(cuid())
  title            String
  description      String
  importance_level ImportanceLevel @default(One)
  createdAt        DateTime         @default(now())
  userId           String
}
